
<div class="container">
  <div class="friends">
    <h3 class="title"> <strong>INVITATIONS</strong> </h3>
    <% @incoming.each do |ir| %>

        <div class="friendscards">

            <div class="profile-img">
              <% if avatar_url = ir.user.facebook_picture_url %>
                <%= image_tag avatar_url, class: "avatar-navbar" %>
              <% else %>
                <%= cl_image_tag ir.user.photo, class: "avatar-navbar" %>
              <% end %>
            </div>
            <div class="friendstext">
              <h5><%= ir.user.email %></h5>
              <%= link_to "Accept", friend_request_path(ir), method: :patch %>
            </div>

        </div>

    <%end%>

    <h3 class="title"> <strong>PENDING REQUESTS</strong> </h3>
    <% @outgoing.each do |outr| %>
      <div class="friendscards">
        <div class="profile-img">
          <% if avatar_url = outr.friend.facebook_picture_url %>
            <%= image_tag avatar_url, class: "avatar-navbar" %>
          <% else %>
            <%= cl_image_tag outr.friend.photo, class: "avatar-navbar" %>
          <% end %>
        </div>
        <div class="friendstext">
          <h5><%= outr.friend.email %></h5>
        </div>
      </div>
    <%end%>

    <br>

    <%=link_to "Back to my friends", friends_path %>

  </div>
</div>
