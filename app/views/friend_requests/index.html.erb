
<div class="container">
  <div class="friends">
    <h3 class="title"> <strong>PENDING REQUESTS</strong> </h3>
    <% @outgoing.each do |outr| %>
      <div class="friendscards">
        <div class="profile-img">
          <%= link_to (image_tag outr.friend.profile_picture, class: "avatar-navbar"), user_path(outr.friend) %>
        </div>
        <div class="friendstext">
          <h5><%= outr.friend.email %></h5>
        </div>
      </div>
    <%end%>

    <br>

    <div class="edit-profile">
      <%=link_to "Back to friends", friends_path, class: "btn btn-danger" %>
    </div>
  </div>
</div>
