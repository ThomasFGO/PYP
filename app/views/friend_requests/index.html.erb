
<div class="container">
  <div class="friends">
    <h3 class="title"> <strong>PENDING REQUESTS</strong> </h3>
    <% @outgoing.each do |outr| %>
      <div class="friendscards">
        <div class="profile-img">
          <% if avatar_url = outr.friend.facebook_picture_url %>
            <%= link_to (image_tag avatar_url, class: "avatar-navbar"), user_path(outr.friend) %>
          <% else %>
            <%= link_to (cl_image_tag outr.friend.photo, class: "avatar-navbar"), user_path(outr.friend.photo) %>
          <% end %>
        </div>
        <div class="friendstext">
          <h5><%= outr.friend.email %></h5>
        </div>
      </div>
    <%end%>

    <br>

    <div class="friendscards">
      <%=link_to "Back to my friends", friends_path %>
    </div>
  </div>
</div>
