<div class="card">

  <div class="card-header">
    <div class="profile-img">
      <div class= "avatar">
        <% if avatar_url = @catch.user.facebook_picture_url %>
          <%= link_to (image_tag avatar_url, class: "avatar"), user_path(@catch.user) %>
        <% else %>
          <%= link_to (cl_image_tag @catch.user.photo, class: "avatar"), user_path(@catch.user) %>
        <% end %>
      </div>
    </div>
    <div class="profile-info">
      <div class="user-name">
      <%= @catch.user.first_name %> <%= @catch.user.last_name.first%>.
      </div>

      <div class="specie"><%= @catch.specie.name %></div>
    </div>
    <div class="time">
      <%= @catch.created_at.strftime("%d/%m/%Y") %>
    </div>
  </div>

  <div class="content-img">
    <%= cl_image_tag @catch.photo %>
  </div>

  <div class="card-footer">
    <div class="picto footer-links">
      <div class="friendscards">
        <ul class="list-inline">
          <li class="coord-gps"><%=@catch.size%> cm</li>
          <li class="coord-gps"><%=@catch.weight%> kg</li>
          <br>
          <li class="coord-gps">Technic: <%=@catch.technic.name%></li>
          <br>
          <li class="coord-gps"> GPS coordinates: <%= @catch.latitude %> - <%= @catch.longitude %> </li>
        </ul>
      </div>
      <div class="friendscards">
      <i> "<%= @catch.description %>" </i>
      </div>
    </div>
</div>


  <% @catch.reviews.each do |review| %>
    <div class="friendscards reviews-display">
      <div class="profile-img">
        <% if avatar_url = review.user.facebook_picture_url %>
          <%= link_to (image_tag avatar_url, class: "avatar-navbar"), user_path(review.user) %>
        <% else %>
          <%= link_to (cl_image_tag review.user.photo, class: "avatar-navbar"), user_path(review.user) %>
        <% end %>
      </div>
      <div class="friendstext">
        <strong><p><%= review.user.first_name %> <%= review.user.first_name.first %> : </p></strong>
        <p><%= review.content %></p>
      </div>
    </div>
  <%end%>

    <br>

  <div id="add-review">
    <%= simple_form_for([@catch, @review]) do |f| %>
    <%= f.input :content, method: :create, label: false, placeholder: "Type your comment"%>
    <%= f.button :submit, "Add comment", class: "btn btn-primary" %>
    <% end %>
  </div>
  <br>
  <div id="map"  style="width: 100%; height: 600px; " data-markers="<%= @markers.to_json %>"></div>

  <div>
    <% if current_user == @catch.user %>
      <%=link_to "Edit", edit_catch_path(@catch)%>
      <%= link_to "Delete", catch_path(@catch), method: :delete,
      data: { confirm: "Are you sure ?" }  %>
    <%end%>
    <%= link_to 'Back', :back, class: "btn btn-danger" %>
  </div>

</div>

