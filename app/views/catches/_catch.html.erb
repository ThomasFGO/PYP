<div class="card">

  <div class="card-header">
    <div class="profile-img">
      <% if avatar_url = catch.user.facebook_picture_url %>
        <%= link_to (image_tag avatar_url, class: "avatar-navbar"), user_path(catch.user) %>
      <% else %>
        <%= link_to (cl_image_tag catch.user.photo, class: "avatar-navbar"), user_path(catch.user) %>
      <% end %>
    </div>

    <div class="profile-info">
      <div class="user-name">
        <%= catch.user.first_name %> <%= catch.user.last_name.first%>.
      </div>
      <div class="specie">
      <%= catch.specie.name.capitalize %>
      </div>
    </div>

    <div class="time">
      <%= catch.created_at.strftime("%d/%m/%Y") %>
    </div>

  </div>

  <div class="content-img">
    <%= cl_image_tag catch.photo %>
  </div>

  <div class="card-footer">
    <div class="friendscard">
    <div class="link-see-more">
      <br>
      <%=link_to "See more", catch_path(catch)%>
    </div>
    <div class="comments">
      <%= link_to 'Add a comment', catch_path(catch, anchor: "add-review") %>
    </div>
    </div>
  </div>

</div>
