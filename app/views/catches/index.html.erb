<div class="tab_general">
  <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">List</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Map</a>
    </li>
  </ul>
</div>


<div class="tab-content" id="tab_content_list">
  <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
    <div class="container">
      <div class="cards-container">
        <div class="row">
          <% @catches.each do |catch| %>
            <div class="col-xs-12 col-sm-6 col-md-6">
              <div class="card">
                <div class="card-description">
                  <%= cl_image_tag catch.photo %>
                  <h4><strong><%= catch.specie.name %></strong></h4>
                  <h5><%= catch.technic.name %></h5>
                  <h6>SIZE: <%= catch.size %>cm | WEIGHT: <%= catch.weight %>kg</h6>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="tab-pane fade" id="tab_content_map" role="tabpanel" aria-labelledby="pills-profile-tab">
    <div id="map" style="width: 100%; height: 600px;" data-markers="<%= @markers.to_json %>"></div>
  </div>
</div>
