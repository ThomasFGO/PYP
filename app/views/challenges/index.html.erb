<div class="container">
    <h3 class="title"><strong>CHALLENGES</strong></h3>

    <div class="challenges">
      <p>En cours : <%= current_user.challenges.count %> </p>

      <% current_user.challenges.each do |challenge| %>
        <div class="friendscards challenges startend">
          <div><%= link_to challenge.name, challenge_path(challenge) %></div>
          <div> Fin : <%= challenge.end_at.strftime("%d/%m/%Y")  %></div>
        </div>
      <% end %>
    </div>


  <h3 class="title"><strong>NOUVEAU CHALLENGE</strong></h3>
  <div>
    <%= simple_form_for(@challenge) do |f| %>
      <%= f.input :name, label: "Titre", placeholder: "Titre"%>
      <%= f.input :start_at, as: :date, html5: true, label: "DÃ©but", input_html: {class: "datepicker"}  %>
      <%= f.input :end_at, as: :date, html5: true, label: "Fin", input_html: {class: "datepicker"} %>
      <%= f.submit "Valider", class: "btn btn-success" %>
      <br>
      <br>
      <%= link_to 'Retour', root_path, class: "btn btn-back" %>
    <% end %>
  </div>
  <br>
</div>
