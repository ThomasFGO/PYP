<% if user_signed_in? %>
<% avatar_url = current_user.facebook_picture_url || "https://i.pinimg.com/originals/61/67/89/61678957b55e21fd48724b879f6e17d1.png" %>

<div id="mySidenav" class="sidenav">
  <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
  <%= link_to "My friend requests", friend_requests_path %>
  <a href="#">About us</a>
  <%= link_to "Edit my profile", friend_requests_path %>
  <%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
</div>

<div class="navbar">

    <span style="font-size:20px;cursor:pointer" onclick="openNav()">&#9776;</span>
    <div>
      <%= link_to root_path do %>
        <i class="fas fa-newspaper"></i>
      <% end %>
    </div>
    <div>
      <%= link_to friends_path do %>
        <i class="fas fa-user-friends"></i>
      <% end %>
    </div>
    <div class="profile-img">
      <%= link_to (image_tag avatar_url, class: "avatar-navbar"), catches_path %>
    </div>

</div>

<% end %>
