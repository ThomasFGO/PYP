<div class="container">
  <div>
    <div>
      <h3 class="title"><strong>CHALLENGE : <%= @challenge.name.upcase %></strong></h3>
    </div>
    <div class="startend">
      <div>
        <h3 class="title"><strong> START </strong> </h3>
        <%= @challenge.start_at.strftime("%d/%m/%Y") %>
      </div>
      <div>
        <h3 class="title"><strong> END </strong> </h3>
        <%= @challenge.end_at.strftime("%d/%m/%Y") %>
      </div>
    </div>
  </div>

    <h3 class="title"><strong> CHALLENGERS </strong> </h3>
    <% @challenge.users.each do |user| %>
      <div class="friendscards profile-img">
        <div> <%= link_to (image_tag user.profile_picture, class: "avatar-navbar"), user_path(user) %> </div>
        <div> <%= link_to user.full_name, user_path(user) %> </div>
      </div>

    <% end %>
  <%= simple_form_for([@challenge, @challenge_user]) do |f| %>
    <div class="challenge-form">
      <div> <%= f.association :user, label: "", collection: @friends_to_add, include_blank: "Add friends", label_method: :full_name %> </div>
      <div> <%= f.submit "Add", class: "btn" %> </div>
    </div>
  <% end %>
  <br>
  <div>
    <%= link_to "Confirm", challenge_path(@challenge), class: "btn btn-primary" %>
    <br>
    <br>
    <%= link_to 'Back to challenges', challenges_path, class: "btn btn-danger" %>

  </div>
</div>
