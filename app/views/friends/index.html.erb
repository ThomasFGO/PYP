<%= simple_form_for(@friend_request) do |f| %>
  <%= f.input :email, label: "Add a friend with its email" %>
  <%= f.submit %>
<%end%>

<br>

<%= link_to "See my friends requests", friend_requests_path %>

<br>


<h2> <strong> My friends</strong></h1>
<% @friends.each do |friend| %>
<ul>
  <li>
    <h2><%= friend.pseudo %></h2>
      <%= link_to "Delete this friend", friend_path(friend), method: :delete,
      data: { confirm: "Are you sure you want to delete this friend ?" }  %>
  </li>
</ul>
<%end%>









