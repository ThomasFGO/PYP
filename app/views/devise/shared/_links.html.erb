<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Facebook Connect", omniauth_authorize_path(resource_name, provider), class: "btn-fb" %>
  <% end -%>
<% end -%>
<br>
<%- if controller_name != 'sessions' %>
  <%= link_to "Se connecter", new_session_path(resource_name), class: "btn-sign" %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
<div class="form-actions">
  <%= link_to "S'inscrire", new_registration_path(resource_name), class: "btn-sign" %><br />
</div>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
<br>
  <%= link_to "Mot de passe oublié ?", new_password_path(resource_name), class: "label-form" %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Renvoyer les instructions de confirmation", new_confirmation_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Renvoyer les instructions de débloquage", new_unlock_path(resource_name) %><br />
<% end -%>

