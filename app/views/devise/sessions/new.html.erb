<div class="container-page">

  <div class="card-container">

    <%= image_tag 'test_logo_6.png', class: "logo" %>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true, :placeholder => "E-mail", label: false, input_html: { class: "form-control" } %>
            <%= f.input :password, required: false, :placeholder => "Password", label: false, input_html: { class: "form-control" } %>
    </div>
    <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

    <div class="signup">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
