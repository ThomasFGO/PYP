<div class="container-page">
  <div class="card-container">
    <%= image_tag 'test_logo_6.png', class: "logo" %>
    <div class="inside-form">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
              <%= f.input :email, required: false, autofocus: true, :placeholder => "E-mail", label: false, input_html: { class: "form-control" } %>
              <%= f.input :password, required: false, :placeholder => "Mot de passe", label: false, input_html: { class: "form-control" } %>
              <%= f.button :submit, "Se connecter", class:"btn-success" %>
        </div>
      <% end %>
    </div>

    <div class="signup">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
