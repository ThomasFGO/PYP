<div class="container-page">
  <div class="card-container">
      <h2>Inscription</h2>
      <div class="inside-form">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email, required: true, autofocus: true, :placeholder => "E-mail", label: false, input_html: { class: "form-control" }%>
            <%= f.input :first_name, required: true, autofocus: true, :placeholder => "PrÃ©nom", label: false, input_html: { class: "form-control" }%>
            <%= f.input :last_name, required: true, autofocus: true, :placeholder => "Nom", label: false, input_html: { class: "form-control" }%>
            <%= f.input :password, required: true, :placeholder => "Mot de passe", label: false, input_html: { class: "form-control" }, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
            <%= f.input :password_confirmation, :placeholder => "Confirmer mot de passe", label: false, input_html: { class: "form-control" }, required: true %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "S'inscrire", class: "btn-success" %>
          </div>
        <% end %>
      </div>

      <div class="signup">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
