<div class="container">

  <h3 class="title"> <strong> EDIT MY PROFILE </strong> </h3>


  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>
    <div class="photo-update">
      <%= f.label :photo do %>
        <span class="btn btn-default">Change avatar</span>
        <% end %>
      <div class="hidden">
        <%= f.input :photo, label: false %>
      </div>
      <br>
      <div class="profile-img">
        <% if avatar_url = current_user.facebook_picture_url %>
          <%= image_tag avatar_url, class: "avatar-navbar" %>
        <% else %>
          <%= cl_image_tag current_user.photo, class: "avatar-navbar" %>
      <% end %>
      </div>
    </div>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password, label: "New password", autocomplete: "off", hint: "Leave it blank if you don't want to change it", required: false %>
      <%= f.input :password_confirmation, label: "Confirm new password", required: false %>
      <%= f.input :current_password, hint: "We need your current password to confirm your changes", required: true %>
      <%= f.button :submit, "Update my profile", class: "btn btn-success" %>
    </div>
  <% end %>

  <h3>Cancel my account</h3>

  <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Back", :back, class: "btn btn-danger" %>

</div>
